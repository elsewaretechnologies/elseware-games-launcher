{
  "name": "elseware-games-launcher",
  "version": "1.0.3",
  "description": "elseware games launcher",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"cross-env NODE_ENV=development npm run electron:dev\"",
    "electron:dev": "wait-on http://localhost:5173 && electron .",
    "build:react": "vite build",
    "build:electron": "electron-builder --dir -c.extraMetadata.version=$npm_package_version",
    "build": "npm run build:react && npm run build:electron",
    "start": "electron ."
  },
  "build": {
    "appId": "com.elsewaregames.launcher",
    "productName": "Elseware Games Launcher",
    "directories": {
      "output": "packages"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "classnames": "^2.5.1",
    "cssnano": "^7.1.1",
    "elseware-ui": "^2.12.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.2"
  }
}
